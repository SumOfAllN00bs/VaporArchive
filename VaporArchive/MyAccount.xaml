<Window x:Class="VaporArchive.MyAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VaporArchive"
        mc:Ignorable="d"
        Title="MyAccount" Height="480" Width="640"
        FontFamily="Iosevka">
    <Grid>
        <Label x:Name="lbl_UserName" Content="Username:" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_UserName" HorizontalAlignment="Left" Height="23" Margin="10,86,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="248"/>
        <Label x:Name="lbl_Password" Content="Password:" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="pwd_Password" HorizontalAlignment="Left" Height="23" Margin="10,161,0,0" VerticalAlignment="Top" Width="248"/>
        <Button x:Name="btn_SaveChanges" Content="Save Changes" HorizontalAlignment="Center" Margin="0,363,0,0" VerticalAlignment="Top" Width="89" Click="btn_SaveChanges_Click"/>
        <Button x:Name="btn_DeleteAccount" Content="Delete Account" HorizontalAlignment="Center" Margin="514,363,29,0" VerticalAlignment="Top" Width="89" Click="btn_DeleteAccount_Click" />

    </Grid>
</Window>
